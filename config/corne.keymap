#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/keys.h>

/ {
    chosen {
        zmk,matrix_transform = &default_transform;

        // zmk,matrix_transform = &five_column_transform;
    };
};

/ {
    behaviors {
        td0: td0 {
            compatible = "zmk,behavior-tap-dance";
            label = "TD0";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPS>;
        };
    };

    combos {
        compatible = "zmk,combos";

        ctrl_c {
            bindings = <&kp LC(C)>;
            key-positions = <26 27>;
            layers = <0>;
        };

        ctrl_v {
            bindings = <&kp LC(V)>;
            key-positions = <28 27>;
            layers = <0>;
        };

        ctrl_z {
            bindings = <&kp LC(Z)>;
            key-positions = <17 16>;
            layers = <0>;
        };

        ctrl_y {
            bindings = <&kp LC(Y)>;
            key-positions = <5 4>;
            layers = <0>;
        };

        ctrl_f {
            bindings = <&kp LC(F)>;
            key-positions = <2 3>;
            layers = <0>;
        };

        ctrl_a {
            bindings = <&kp LC(A)>;
            key-positions = <13 14>;
            layers = <0>;
        };

        ctrl_x {
            bindings = <&kp X>;
            key-positions = <25 26>;
            layers = <0>;
        };

        apos {
            bindings = <&kp APOS>;
            key-positions = <7 8>;
            layers = <0>;
        };

        quote {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <9 8>;
            layers = <0>;
        };

        screen {
            bindings = <&kp LG(LS(S))>;
            key-positions = <27 26 28>;
            layers = <4>;
        };

        enter_left {
            bindings = <&kp ENTER>;
            key-positions = <16 15 14>;
            layers = <0 1>;
        };

        enter_right {
            bindings = <&kp ENTER>;
            key-positions = <19 20 21>;
            layers = <0 1>;
        };

        num_comma {
            bindings = <&kp KP_COMMA>;
            key-positions = <2 3>;
            layers = <1>;
        };

        num_dot {
            bindings = <&kp DOT>;
            key-positions = <4 3>;
            layers = <1>;
        };

        num_minus {
            bindings = <&kp MINUS>;
            key-positions = <14 15>;
            layers = <1>;
        };

        num_plus {
            bindings = <&kp PLUS>;
            key-positions = <16 15>;
            layers = <1>;
        };

        num_div {
            bindings = <&kp KP_DIVIDE>;
            key-positions = <26 27>;
            layers = <1>;
        };

        num_mult {
            bindings = <&kp KP_MULTIPLY>;
            key-positions = <28 27>;
            layers = <1>;
        };

        fun_left {
            bindings = <&sl 5>;
            key-positions = <16 38>;
        };

        fun_right {
            bindings = <&sl 5>;
            key-positions = <19 39>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            display-name = "base";
            bindings = <
&none  &kp Q  &kp W  &kp F         &kp P  &kp B          &kp J            &kp L          &kp U          &kp Y    &kp SEMI  &none
&none  &kp A  &kp R  &kp S         &kp T  &kp G          &kp M            &kp N          &kp E          &kp I    &kp O     &none
&none  &kp Z  &kp X  &kp C         &kp D  &kp V          &kp K            &kp H          &kp COMMA      &kp DOT  &kp SQT   &none
                     &kp LEFT_ALT  &mo 4  &lt 1 SPACE    &kp RIGHT_SHIFT  &kp RIGHT_ALT  &kp RIGHT_WIN
            >;
        };

        num {
            display-name = "num";
            bindings = <
&none  &kp ASTRK  &kp N7  &kp N8  &kp N9  &kp PLUS     &none           &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp BACKSLASH  &kp PIPE   &none
&none  &kp N0     &kp N4  &kp N5  &kp N6  &kp MINUS    &none           &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp UNDER      &kp EQUAL  &none
&none  &kp SLASH  &kp N1  &kp N2  &kp N3  &kp EQUAL    &none           &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp GRAVE      &kp TILDE  &none
                          &none   &none   &none        &kp LEFT_SHIFT  &none                 &trans
            >;
        };

        game {
            bindings = <
&none  &kp TAB           &kp Q  &kp W  &kp E  &kp R        &none  &none     &kp UP    &none      &none      &none
&none  &kp LSHIFT        &kp A  &kp S  &kp D  &sl 3        &none  &kp LEFT  &kp DOWN  &kp RIGHT  &kp ENTER  &none
&none  &kp LEFT_CONTROL  &kp Z  &kp X  &kp C  &kp F        &none  &none     &none     &none      &none      &none
                                &none  &mo 4  &kp SPACE    &none  &none     &none
            >;
        };

        gameplus {
            bindings = <
&none  &kp F5        &kp N1     &kp N2  &kp N3  &kp N4    &none  &none  &none  &none  &none  &none
&none  &kp LEFT_ALT  &kp SLASH  &kp K   &kp Y   &kp V     &none  &none  &none  &none  &none  &none
&none  &kp L         &kp I      &kp T   &kp N5  &kp N6    &none  &none  &none  &none  &none  &none
                                &kp J   &kp G   &kp M     &none  &none  &none
            >;
        };

        nav {
            bindings = <
&none  &kp ESC           &kp DEL       &kp UP            &kp BACKSPACE  &kp LC(BACKSPACE)    &none  &kp LG(L)     &none         &none  &none  &none
&none  &kp ENTER         &kp LEFT      &kp DOWN          &kp RIGHT      &kp PG_UP            &none  &kp C_VOL_DN  &kp C_VOL_UP  &none  &none  &none
&none  &kp LEFT_CONTROL  &kp LEFT_ALT  &kp C_PLAY_PAUSE  &kp TAB        &kp PAGE_DOWN        &none  &none         &none         &none  &none  &none
                                       &none             &none          &none                &none  &none         &none
            >;
        };

        funkcje {
            bindings = <
&none  &none       &none   &none   &kp F11   &none     &none   &kp F12   &none   &none   &none    &none
&none  &kp F1      &kp F2  &kp F3  &kp F4    &kp F5    &kp F6  &kp F7    &kp F8  &kp F9  &kp F10  &none
&none  &bl BL_OFF  &none   &none   &kp CAPS  &none     &none   &kp CAPS  &none   &none   &none    &none
                           &none   &none     &none     &none   &none     &none
            >;
        };

        mouse {
            bindings = <
&none  &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
&none  &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
&none  &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
                     &none  &none  &none    &none  &none  &none
            >;
        };
    };
};
